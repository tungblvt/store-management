<div class="row">
  <div class="col-md-12">
    <h1><%= t "home_page.Search_for" %>: <%= params[:keyword] %></h1>
  </div>
</div>
<div class="row list-products">
  <% @products.each do |product| %>
  <div class="col-md-3 product">
    <div class="inner-product">
      <%= image_tag product.image.url if product.image? %>
      <h4 class="title"><%= product.name %></h4>
      <span class="price"><%= number_to_currency product.price, locale: :vi %></span>
      <span class="rating">
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
      </span>
      <%= link_to product.store.name, store_path(product.store), class: "store-name" %>
    </div>
  </div>
  <% end %>
</div>
